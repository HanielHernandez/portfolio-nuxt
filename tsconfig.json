{
    // https://nuxt.com/docs/guide/concepts/typescript
    "extends": "./.nuxt/tsconfig.json",
    "compilerOptions": {
        "strict": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "jsx": "preserve",
        "allowJs": true,
        "checkJs": true,
        "skipLibCheck": true,
        "types": ["vue", "nuxt"], // quitamos @nuxt/types (Nuxt 2),
        "paths": {
            "~/*": ["./*"],
            "@/*": ["./*"]
        }
    },
    "include": [
        "nuxt.config.ts",
        "app.vue",
        "components/**/*.ts",
        "components/**/*.vue",
        "pages/**/*.vue",
        "layouts/**/*.vue",
        "plugins/**/*.ts",
        "types/**/*.ts",
        "constants/**/*.ts",
        "utils/**/*.ts",
        ".storybook/**/*.ts"
    ]
}
