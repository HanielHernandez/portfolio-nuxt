{
    // https://nuxt.com/docs/guide/concepts/typescript
    "extends": "./.nuxt/tsconfig.json",
    "compilerOptions": {
        "strict": true,
        "target": "ESNext",
        "types": ["vue", "@nuxt/types"],
        "jsx": "preserve",
        "module": "ESNext",
        "allowJs": true,
        "checkJs": true,
        "moduleResolution": "Node",
        "skipLibCheck": true
    },
    "include": ["nuxt.config.ts", ".storybook/**/*.ts", "components/**/*.ts", "constants/**/*.ts"]
}
