{
    "extends": "./.nuxt/tsconfig.json",
    "compilerOptions": {
        "strict": true,
        "types": ["@nuxt/types", "@types/node"],
        "jsx": "preserve",
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "skipLibCheck": true
    },
    "include": ["**/*.ts", "**/*.d.ts", "**/*.tsx", "**/*.vue"],
    "exclude": ["node_modules"]
}
